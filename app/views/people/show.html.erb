<!-- title -->
<div class="sixteen columns">
    <% unless flash.empty? %>
        <br>
        <% flash.each do |key, value| %>
        <div class="alert <%= key %> hideit">
            <p><%= value %></p>
            <span class="close"></span>
        </div>
        <% end %>
    <% end %>

    <h1 class="page-title">
        <b><%= @person.name %></b>
        <small> | Apto <%= @person.apartment.number %>, <%= @person.apartment.building.name %></small>
        <span class="line"></span>
    </h1>
</div>
<!-- /title -->

<!-- sidebar -->
<div class="four columns bottom">

    <!-- dados pessoais -->
    <ul class="team">
        <li>
            <%= avatar_for @person, 200 %>
        </li>
        <h2 class="title bottom-2">Dados da conta&nbsp;
            <% if current_user.admin? || current_user?(@person.user) %>
                <a href=<%= edit_person_path(@person) %> class="pull-right">
                    <small>editar</small>
                </a>
            <% end %>
        </h2>
        <li><%= @person.name %></li>
        <li>Apto <%= @person.apartment.number %>, <%= @person.apartment.building.name %></li>
        <li><%= @person.email %></li>
        <li>Membro desde <%= to_brazillian_date @person.user.created_at %></li>
    </ul>
    <!-- /dados pessoais -->
</div>
<!-- /sidebar -->

