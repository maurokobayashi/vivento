<% unless flash.empty? %>
    <div class="sixteen columns">
        <% flash.each do |key, value| %>
        <div class="alert <%= key %> hideit">
            <p><%= value %></p>
            <span class="close"></span>
        </div>
        <% end %>
    </div>
<% end %>

<div class="sixteen columns">
    <h1 class="page-title">
        Vizinhos queridos! <small>(<%= Person.count %>)</small>
        <span class="line"></span>
    </h1>
    <% if current_user.admin? %>
        <br>
        <span class="circle_plus icon black"></span><%= link_to "cadastrar morador", new_person_path %>
        <br>
    <% end %>
    <%= will_paginate %>
    <ul class="users">
        <%= render @people%>
    </ul>
    <%= will_paginate %>
</div>
<br>